{
  "name": "root",
  "private": true,
  "description": "Calendar plugin for Craft",
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-react": "^1.1.7",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "ini": ">=1.3.6",
    "lerna": "^6.0.3",
    "prettier": "^2.1.2",
    "ssri": ">=8.0.1"
  },
  "scripts": {
    "dev": "lerna run --parallel dev",
    "build": "lerna run --parallel build",
    "format": "prettier --write '**/*.{ts,tsx,md,json,js,jsx,css,scss}'",
    "format:verify": "prettier --list-different '**/*.{ts,tsx,md,json,js,jsx,css,scss}'",
    "lint": "lerna run --parallel lint",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap --loglevel warn --concurrency 4",
    "test": "lerna run test"
  },
  "author": "Solspace, Inc.",
  "license": "ISC"
}
