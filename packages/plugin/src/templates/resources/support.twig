{% extends "calendar/resources/_layout" %}

{% set title = "Support"|t("calendar") %}
{% set crumbs = [
    { label: craft.calendar.name, url: url("calendar") },
    { label: "Resources"|t("calendar"), url: url("calendar/resources"), current: true },
] %}

{% block content %}

    <p>
        {{ "If you run into any issues or have any feature requests, check out the official support options below. We also appreciate any feedback you can provide us."|t("calendar") }}
    </p>

    {% set items = [
        {
            icon: icons.support,
            title: "Private Support",
            description: "Need help with Calendar or experiencing an issue? Feel free to send us a private support ticket.",
            link: "https://docs.solspace.com/craft/calendar/v4/support.html",
            linkText: "Visit",
        },
        {
            icon: icons.github,
            title: "GitHub Issues",
            description: "Visit our GitHub Issues page to check for existing issues or create new issue reports.",
            link: "https://github.com/solspace/craft-calendar/issues",
            linkText: "Visit",
        },
        {
            icon: icons.feedback,
            title: "GitHub Discussion",
            description: "Have any questions? Have any ideas you'd like to share? Visit our GitHub Discussions area!",
            link: "https://github.com/solspace/craft-calendar/discussions",
            linkText: "Visit",
        },
        {
            icon: icons.newsletter,
            title: "Newsletter",
            description: "Receive occasional (a few times a year) updates and tips about Calendar and other Solspace software.",
            link: "https://docs.solspace.com/redirect/calendar/newsletter",
            linkText: "Subscribe",
        },
    ] %}

    <ul class="cards">
        {% for item in items %}
            <li>
                <div class="community-card">
                    <div class="icon">
                        {{ item.icon|raw }}
                    </div>
                    <h3>
                        <a href="{{ item.link }}" target="_blank">
                            {{ item.title }}
                        </a>
                    </h3>
                    <p class="description">
                        {{ item.description|t("calendar") }}
                    </p>
                </div>

                <div class="card-footer centered">
                    <a href="{{ item.link }}" class="btn submit" target="_blank">
                        {{ item.linkText|t("calendar") }}
                    </a>
                </div>
            </li>
        {% endfor %}
    </ul>

{% endblock %}
